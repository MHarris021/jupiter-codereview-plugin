      <perspectiveShortcut id="org.eclipse.ui.resourcePerspective"/>
      <perspectiveShortcut id="org.eclipse.jdt.ui.JavaBrowsingPerspective"/>
      <perspectiveShortcut id="org.eclipse.debug.ui.DebugPerspective"/>
