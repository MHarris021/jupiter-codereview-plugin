        class="edu.hawaii.ics.csdl.jupiter.ui.perspective.ReviewPerspectiveFactory"
        id="edu.hawaii.ics.csdl.jupiter.ui.perspective">
    </perspective>
  </extension>
  <extension point="org.eclipse.ui.perspectiveExtensions">
